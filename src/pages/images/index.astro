---
import MainLayout from '@layouts/MainLayout.astro';
import { Image, Picture } from 'astro:assets';

import post05Img from '@images/post-05.png';
---

<MainLayout title="Imágenes">
    <h1 class="text-5xl text-white">Imágenes</h1>
    <img src="/assets/images/post-05.png" width="250" height="250"/>
    <!-- <Image src={post05Img} width="250" height="250" alt="Imagen del post" /> -->
    <h1>Quality LOW</h1>
    <Image src={post05Img} quality="low" width="250" height="250" alt="Imagen del post" />
    <h1>Quality MID</h1>
    <Image src={post05Img} quality="mid" width="250" height="250" alt="Imagen del post" />
    <h1>Quality HIGH</h1>
    <Image src={post05Img} quality="high" width="250" height="250" alt="Imagen del post" />
    <h1>Quality MAX</h1>
    <Image src={post05Img} quality="max" width="250" height="250" alt="Imagen del post" />
    <h1>Formato AVIF</h1>
    <Image src={post05Img} format="avif" width="250" height="250" alt="Imagen del post" />
    <h1>Formato PNG</h1>
    <Image src={post05Img} format="png" width="250" height="250" alt="Imagen del post" />
    <h1>Formatos con Picture</h1>
    <!-- formats={['avif', 'jpeg', 'jpg', 'png', 'webp']} -->
    <!-- widths={[240, 540, 720, post05Img.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`} -->
    <Picture
        src={post05Img}
        alt="Imagen del post"
        width={post05Img.width / 2}
        densities={[1.5, 2]}
    />

    <div style={{ height: '3000px', }} ></div>

    <img loading="lazy" src="/assets/images/post-05.png" width="250" height="250"/>
</MainLayout>